@model List<proje_bitirme.Models.MarkaAnalizViewModel>

@{
    ViewData["Title"] = "Yakıt ve Emisyon Analizi";
}

<div class="container my-5">
    <h2 class="text-center mb-4 text-info">Araç Sınıfına Göre Yakıt ve Emisyon Analizi</h2>

    <table class="table table-dark table-bordered table-hover shadow">
        <thead class="table-info text-dark">
            <tr>
                <th>Araç Sınıfı</th>
                <th>Ortalama Yakıt Tüketimi (L/100km)</th>
                <th>Ortalama CO₂ Emisyonu (g/km)</th>
                <th>Ortalama Motor Hacmi (L)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AracSinifi</td>
                    <td>@item.OrtalamaTuketim.ToString("0.00")</td>
                    <td>@item.OrtalamaEmisyon.ToString("0")</td>
                    <td>@item.OrtalamaMotorHacmi.ToString("0.0")</td>
                </tr>
            }
        </tbody>
    </table>
</div>